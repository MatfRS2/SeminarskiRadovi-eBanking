@model Transaction
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Transaction</h1>
<div class="row col-md-8">
    <form method="post">
        <div class="form-group">
            <label class="control-label"> Select your account </label>
            <select asp-for="SenderCurrencyId" class="form-control" asp-items="ViewBag.Currencies"></select>
        </div>

        <div class="form-group">
            <label class="control-label"> Amount </label>
            <input asp-for="Amount" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label"> Recipient account ID </label>
            <input asp-for="RecipientAccount" class="form-control" />
        </div>
        @*
        <form asp-action="SendMoney" method="post">
            <button type="submit" class="btn btn-success"> Send </button>
        </form>
            *@

        <div class="form-group">
            <input asp-action="SendMoney" type="submit"  class="btn btn-success" />
        </div>
        <p>
            @ViewData["Message"]
        </p>
    </form>
</div>
