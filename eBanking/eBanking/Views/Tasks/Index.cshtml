@model List<eBanking.Models.Task>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pending transactions</h1>
<div class="row col-md-8">
    <table class="table table-bordered table-striped">
        <thead class="text-center">
            <tr>
                <th>Sender</th>
                <th>Receiver</th>
                <th>Balance</th>
                <th>Amount</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td> @task.Sender </td>
                    <td> @task.Receiver</td>
                    <td> @task.CurrentBalance</td>
                    <td> @task.Amount</td>
                    <td> @task.Currency</td>
                    <td>
                        <form method="post" asp-action="ApproveTransaction">
                            <input name="taskId" type="hidden" value="@task.Id" />
                            <input type="submit" value="Approve" class="btn btn-success" />
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="RejectTransaction">
                            <input name="taskId" type="hidden" value="@task.Id" />
                            <input type="submit" value="Reject" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>