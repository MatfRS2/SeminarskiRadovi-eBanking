@model List<eBanking.Models.Task>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pending transactions</h1>
<div class="row col-md-8">
    <table style=" border-color: black; border-style: dashed" align="center">
        @foreach (var task in Model)
        {
            <tr>
                <td> @task.Sender </td>
                <td> @task.Receiver</td>
                <td> @task.CurrentBalance</td>
                <td> @task.Amount</td>
                <td> @task.Currency</td>
                <td>
                <form method="post" asp-action="ApproveTransaction">
                    <input name="taskId" type="hidden" value="@task.Id" />
                    <input type="submit" value="Approve" class="btn btn-success" />
                </form>
                </td>
                <td>
                    <form method="post" asp-action="RejectTransaction">
                        <input name="taskId" type="hidden" value="@task.Id" />
                        <input type="submit" value="Reject" class="btn btn-sm btn-danger" />
                    </form>
                </td>
            </tr>
        }
        </table>
        <!--
        <div class="form-group">
            <input asp-action="ConvertMoney" type="submit" value="Convert" class="btn btn-success" />
        </div>
            -->
    
</div>

